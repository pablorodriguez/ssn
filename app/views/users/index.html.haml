%h1 Listing users
.row
  .col.s12
    = render @users

%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Email
      %th Cellphone
      %th Address
      %th City
      %th State
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.first_name
        %td= user.last_name
        %td= user.email
        %td= user.cellphone
        %td= user.address
        %td= user.city
        %td= user.state
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New User', new_user_path
